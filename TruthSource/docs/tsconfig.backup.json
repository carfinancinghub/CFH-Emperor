{
    "include":  [
                    "./**/*"
                ],
    "exclude":  [
                    "node_modules",
                    "dist",
                    "build",
                    "coverage",
                    "docs",
                    "**/*.d.ts"
                ],
    "compilerOptions":  {
                            "jsx":  "react-jsx",
                            "baseUrl":  ".",
                            "checkJs":  false,
                            "typeRoots":  [
                                              "./types",
                                              "./node_modules/@types"
                                          ],
                            "module":  "commonjs",
                            "paths":  {
                                          "@/*":  [
                                                      "*"
                                                  ]
                                      },
                            "forceConsistentCasingInFileNames":  true,
                            "allowJs":  true,
                            "skipLibCheck":  true,
                            "strict":  true,
                            "target":  "ES2020",
                            "resolveJsonModule":  true,
                            "esModuleInterop":  true
                        }
}
