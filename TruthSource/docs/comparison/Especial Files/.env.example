# .env.example
# Template for environment variables required by Project CFH.
# Copy to .env and populate with real values for local development.
# // Version: 1.0.1
# // artifact version ID: b46993af-15b6-478d-bc77-d6516ce96641

# Application & Server
NODE_ENV=development
PORT=5000

# Database & Cache
# MongoDB connection string (e.g., mongodb://db:27017/cfh)
MONGO_URI=mongodb://localhost:27017/cfh
# Redis connection string (e.g., redis://redis:6379)
REDIS_URL=redis://localhost:6379

# Security & Authentication
# Random secret for JWT signing (e.g., generate with `openssl rand -base64 32`)
JWT_SECRET=abc123xyz789randomsecretstring456

# Cloud Services (AWS S3)
# AWS credentials for photo storage
AWS_ACCESS_KEY_ID=AKIAEXAMPLE123456789
AWS_SECRET_ACCESS_KEY=abc123xyz789secretkey456
AWS_S3_BUCKET_NAME=cfh-photos
AWS_REGION=us-west-2

# Payment Gateway (Stripe)
# Stripe secret key for payments and payouts (e.g., from Stripe dashboard)
STRIPE_SECRET_KEY=sk_test_1234567890abcdef

# Logging
# Log level for application (e.g., debug, info, warn, error)
LOG_LEVEL=info

# Monitoring (Optional)
# Prometheus endpoint for metrics (e.g., http://prometheus:9090)
PROMETHEUS_URL=http://localhost:9090